public boolean isSorted(int[]arr){
    boolean ascending=true;
    boolean descending=true;
    for(int i=1;i<arr.length;i++) {
        if(arr[i]<arr[i-1]){
                ascending=false;
            }
        else if(arr[i]>arr[i - 1]){
              descending=false;
            }
    }
    return ascending||descending;
}
